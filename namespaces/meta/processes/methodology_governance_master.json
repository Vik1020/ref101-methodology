{
  "process_id": "methodology_governance_master",
  "version": "1.0.0",
  "name": "Methodology Governance Master",
  "type": "orchestration",
  "group": "MANAGEMENT",
  "description": "Orchestrates all 6 process groups (LIFECYCLE, QA, EFFECTIVENESS, GOVERNANCE, OPTIMIZATION, INTEGRATION): determines execution order, validates dependencies, assigns ownership, manages scheduling based on organizational context.",

  "phases": [
    {
      "id": "PLANNING",
      "type": "Initial",
      "description": "Determine which process groups are active for organizational context (startup/enterprise/scaleup)",
      "validators": ["context_specified", "groups_selected"]
    },
    {
      "id": "PRIORITIZATION",
      "type": "Working",
      "description": "Set priorities for each group based on context and current phase",
      "validators": ["priorities_set", "critical_groups_identified"],
      "outputs": ["priority_matrix"]
    },
    {
      "id": "DEPENDENCY_CHECK",
      "type": "Working",
      "description": "Validate group dependencies (QA depends on LIFECYCLE, OPTIMIZATION depends on EFFECTIVENESS, etc)",
      "validators": ["dependencies_validated", "no_circular_dependencies"],
      "outputs": ["dependency_graph"]
    },
    {
      "id": "OWNERSHIP_ASSIGNMENT",
      "type": "Working",
      "description": "Assign owner roles and backup for each active group",
      "validators": ["owners_assigned", "backups_designated"],
      "outputs": ["ownership_map"]
    },
    {
      "id": "SCHEDULING",
      "type": "Working",
      "description": "Define execution schedule for each group (continuous/on-demand/periodic)",
      "validators": ["schedules_defined"],
      "outputs": ["execution_schedule"]
    },
    {
      "id": "EXECUTION",
      "type": "Working",
      "description": "Trigger process groups in correct order based on dependencies",
      "validators": ["groups_triggered"],
      "outputs": ["execution_log"]
    },
    {
      "id": "MONITORING",
      "type": "Working",
      "description": "Track execution status, progress, and health of all groups",
      "validators": ["monitoring_active"],
      "outputs": ["status_dashboard"]
    },
    {
      "id": "REVIEW",
      "type": "Working",
      "description": "Quarterly retrospective on group effectiveness and adjustments needed",
      "validators": ["review_complete"],
      "outputs": ["retrospective_report"]
    },
    {
      "id": "COMPLETE",
      "type": "Terminal",
      "description": "Governance cycle completed successfully"
    }
  ],

  "group_orchestration": {
    "execution_order": {
      "phase_1_foundation": {
        "groups": ["LIFECYCLE", "QA"],
        "description": "Create and validate methodologies",
        "blocking": true
      },
      "phase_2_operations": {
        "groups": ["EFFECTIVENESS", "GOVERNANCE"],
        "description": "Measure and control running processes",
        "blocking": false
      },
      "phase_3_improvement": {
        "groups": ["OPTIMIZATION", "INTEGRATION"],
        "description": "Optimize and extend methodologies",
        "blocking": false
      }
    },

    "dependencies": {
      "QA": {
        "depends_on": ["LIFECYCLE"],
        "reason": "Methodology must exist before validation"
      },
      "EFFECTIVENESS": {
        "depends_on": ["LIFECYCLE", "QA"],
        "reason": "Valid methodology must be deployed to collect metrics"
      },
      "OPTIMIZATION": {
        "depends_on": ["EFFECTIVENESS"],
        "reason": "Metrics required to identify optimization opportunities"
      },
      "LIFECYCLE_evolution": {
        "depends_on": ["OPTIMIZATION"],
        "reason": "Improvements feed back into methodology evolution"
      }
    },

    "ownership": {
      "LIFECYCLE": {
        "owner_role": "Methodology Architect",
        "backup": "Senior Process Engineer",
        "responsibilities": ["Create", "Migrate", "Evolve", "Deprecate methodologies"]
      },
      "QA": {
        "owner_role": "Quality Assurance Lead",
        "backup": "Automated Validation System",
        "responsibilities": ["Validate", "Test", "Audit methodologies"]
      },
      "EFFECTIVENESS": {
        "owner_role": "Analytics Team",
        "backup": "Data Engineer",
        "responsibilities": ["Collect metrics", "Analyze performance", "Calculate ROI"]
      },
      "GOVERNANCE": {
        "owner_role": "Process Owner",
        "backup": "Compliance Officer",
        "responsibilities": ["Manage approvals", "Enforce compliance", "Control access"]
      },
      "OPTIMIZATION": {
        "owner_role": "AI/ML Team",
        "backup": "Process Improvement Lead",
        "responsibilities": ["Detect bottlenecks", "Propose improvements", "Identify automation"]
      },
      "INTEGRATION": {
        "owner_role": "Platform Engineering",
        "backup": "DevOps Lead",
        "responsibilities": ["Integrate tools", "Cross-reference methodologies", "Manage APIs"]
      }
    },

    "scheduling": {
      "LIFECYCLE": {
        "frequency": "on-demand",
        "trigger": "new methodology request OR improvement proposal approved"
      },
      "QA": {
        "frequency": "continuous",
        "trigger": "on every methodology change (git hook)"
      },
      "EFFECTIVENESS": {
        "frequency": "continuous + scheduled",
        "trigger": "new Facts created (real-time) + daily aggregation at 00:00 UTC"
      },
      "GOVERNANCE": {
        "frequency": "continuous",
        "trigger": "rule violations OR approval requests"
      },
      "OPTIMIZATION": {
        "frequency": "scheduled",
        "trigger": "weekly bottleneck detection + monthly improvement proposals"
      },
      "INTEGRATION": {
        "frequency": "on-demand",
        "trigger": "new tool integration request OR methodology cross-reference needed"
      }
    }
  },

  "priority_by_context": {
    "startup": {
      "LIFECYCLE": "P0",
      "QA": "P1",
      "EFFECTIVENESS": "P2",
      "GOVERNANCE": "P3",
      "OPTIMIZATION": "P3",
      "INTEGRATION": "P2"
    },
    "enterprise": {
      "LIFECYCLE": "P1",
      "QA": "P0",
      "EFFECTIVENESS": "P1",
      "GOVERNANCE": "P0",
      "OPTIMIZATION": "P2",
      "INTEGRATION": "P1"
    },
    "scaleup": {
      "LIFECYCLE": "P1",
      "QA": "P1",
      "EFFECTIVENESS": "P0",
      "GOVERNANCE": "P1",
      "OPTIMIZATION": "P0",
      "INTEGRATION": "P1"
    }
  },

  "nodes": {
    "meta:orchestrator": "^1.0.0"
  }
}
